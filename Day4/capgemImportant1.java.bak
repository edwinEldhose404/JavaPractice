import java.util.Scanner;

class capgemImportant1
{
	public static void main(String[] args) 
	{
		
		//A shop will give discount of 10% if the cost of purchased 
		//quantity is more than 1000.
		//Based on quantity
		//Suppose, one unit will cost 100.
		//Judge and print total cost for user.
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Enter total quantity");
		int quant = sc.nextInt();
		
		if ((quant*100)>1000)
		{
			System.out.println("Your total amount with discount is : " + (quant*100)*0.90);
		}
		else
		{
			System.out.println("Your total amount is : " + (quant*100));
		}
		
	}
}
